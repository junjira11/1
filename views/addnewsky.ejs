<%- include("partials/header") %>
<div class ="container" style="width: 25%; margin: 25px auto;">
    <h3 style="text-align: center;">Create a new Sky </h3>
    <form action="/new" method="POST">
        <div class="form-group">
            <label for="edskyname">Name of Sky</label>
            <input type="text" class="form-control" name="name" placeholder="Name of Sky">      
        </div>
        <div class="form-group">
            <label for="edskyURL">Image URL</label>
            <input type="text" class="form-control" name="image" placeholder="URL of image">
        </div>
        <div class="form-group">
            <label for="edskyDesc">Desciption</label>
             <input type="text" class="form-control" name="desc" placeholder="Ability of sky">
        </div>

        <button type="submit" class="btn btn-outline-primary" style="float: right;">Submit</button>
  </form>
</div>
<%- include("partials/footer") %>